<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
android:id="@+id/list_row_linear_layout_1"
android:padding="0dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:id="@+id/post_element_image"
    android:layout_marginEnd="15dp"
    android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/post_element_name"
        android:text="My main name"
        android:textSize="10dp"
        android:textColor="#D81B60"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="My sub-main name"
        android:textColor="#43A047"
        android:textStyle="italic"
        android:textSize="10dp"
        android:id="@+id/post_element_division"/>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="My sub-main name"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        android:textSize="10dp"
        android:id="@+id/post_element_location"/>


</LinearLayout>