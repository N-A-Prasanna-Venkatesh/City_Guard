<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Citizen_Details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_textview"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Please provide your photo,by clicking the image below"
                android:textColor="@android:color/holo_green_light"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"/>
            <ImageView
                android:id="@+id/settings_profile_image"

                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/ic_camera"
                android:layout_below="@+id/settings_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                />
            <EditText
                android:id="@+id/username_settings"

                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_image"
                android:textColor="@android:color/holo_orange_light"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_username"
                android:backgroundTint="@android:color/holo_green_light"
                android:hint="Enter your Aadhar number"
                android:textColorHint="@android:color/holo_green_light"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/bio_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_settings"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                android:textColor="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:drawableLeft="@drawable/ic_password"
                android:backgroundTint="@android:color/holo_green_light"
                android:hint="Enter your Name.."
                android:textColorHint="@android:color/holo_green_light"
                />
            <Button
                android:id="@+id/save_settings"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bio_settings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:padding="16dp"
                android:textSize="20dp"
                android:background="@drawable/background"
                android:text="Save"
                android:textAllCaps="false"/>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>