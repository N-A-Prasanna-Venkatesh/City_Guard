<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WarningFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_warning"
    android:textAlignment="center"
    android:textColor="@android:color/holo_purple"
    android:background="@android:color/black"
    android:text="This section contains the posts/warnings that are intimated by the cops/police and are needing your help in spreading awareness and help them to find these people"
    />
    <GridView
        android:id="@+id/Fragment_list_view_warning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_warning"
        android:numColumns="1"
        />

</RelativeLayout>